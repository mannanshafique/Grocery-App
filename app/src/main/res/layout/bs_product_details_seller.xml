<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/shape_rec01"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/R1"
        >
        <ImageButton
            android:id="@+id/BtnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/ic_back"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Details"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            />
        <ImageButton
            android:id="@+id/BtnEdit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/ic_edit"
            android:layout_toLeftOf="@+id/BtnDelete"
            />
        <ImageButton
            android:id="@+id/BtnDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/ic_delete_white"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
    <ImageView
        android:id="@+id/productIconTV"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="67dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_shoppingcart"
        android:padding="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/productIconTV">
        <TextView
            android:id="@+id/DiscountNoteTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10% Off"
            android:padding="5dp"
            android:textColor="@color/colorGreen"
            android:textSize="13sp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_rect05"/>
        <TextView
            android:id="@+id/TitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Product Title"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
           />
        <TextView
            android:id="@+id/DescriptionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:padding="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/CategoryTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catergory"
            android:padding="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/QuantityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:padding="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/DiscountPriceTvs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$10"
                android:padding="5dp"
                android:textColor="@color/colorGray02"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/PriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$15"
                android:padding="5dp"
                android:textColor="@color/colorGray02"
                android:textSize="16sp"
                />

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>